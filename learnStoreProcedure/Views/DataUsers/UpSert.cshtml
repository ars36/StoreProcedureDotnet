@{
    ViewData["Title"] = "Insert - Update";
}

@model UserViewModel

<div class="text-center">
    <h1>Insert Update Data Users</h1>
    <form action="#">
        <div class="group-control">
            <label for="firstname">firstname</label>
            <input asp-for="FirstName" type="text" name="firstname">
        </div>
        <div class="group-control">
            <label for="lastname">lastname</label>
            <input asp-for="LastName" type="text" name="lastname">
        </div>
        <div class="group-control">
            <label for="birthdate">birthdate</label>
            <input asp-for="BirstDate" type="date" name="birthdate">
        </div>
        <div class="group-control">
            <label for="isactive">isactive</label>
            <select asp-for="IsActive" name="isactive" id="isactive">
                <option value="true">Active</option>
                <option value="false">DeActive</option>
            </select>
        </div>
        <button type="submit">Submit</button>
    </form>
</div>