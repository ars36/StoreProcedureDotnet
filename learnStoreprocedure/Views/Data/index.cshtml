@{
    ViewData["Title"] = "Data Users";
}
@model List<UserViewModel>

<div class="text-center">
    <h1 class="display">Data Users</h1>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Officiis explicabo at enim voluptas excepturi qui optio necessitatibus eveniet, hic similique sapiente est eius voluptates officia modi! Ipsa modi delectus expedita.</p>
    <div class="container">
        <button style="background-color:green;"><a href="#" style="text-decoration:none;color:white">Add New Users</a></button>
        <table>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birth Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.BirthDate</td>
                    <td>
                        @if(@item.IsActive == true){
                            <p style="color: green;">Active</p>
                        } else {
                            <p style="color: red;">DeActive</p>
                        }
                    </td>
                    <td>
                        <button style="background-color: yellow;"><a style="color: black; text-decoration:none;" href="#">Edit</a></button>
                        <button style="background-color: red;"><a style="color: white; text-decoration:none;" href="#">Delete</a></button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
